{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"declaration": true,
		"skipLibCheck": true
	},
	"exclude": ["src/**/*.test.ts", "src/**/*.test.tsx", "setupTests.ts", "dist"]
}
